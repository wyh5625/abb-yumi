<?xml version="1.0"?>
<launch>
    <arg name="name" default="yumi" doc="The robot name. Ensure this is the same name you give to the arm in the urdf instance."/>
    <!--arg name="port" default="49939"/-->
    <arg name="ip" default="192.168.125.1"/> <!--when talking to the real robot controller -->

    <arg name="controllers" default="joint_state_controller joint_group_vel_controller" doc="Controllers that are activated by default."/>
    <arg name="stopped_controllers" default="joint_group_pos_controller" doc="Controllers that are initally loaded, but not started."/>

    <arg name="hardware_interface" default="VelocityJointInterface"/>

    <!-- the urdf/sdf parameter -->
    <param name="robot_description" command="$(find xacro)/xacro $(find abb_description)/urdf/yumi_nogrippers.urdf.xacro prefix:=$(arg hardware_interface)"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <remap from="/joint_states" to="/yumi/joint_states" />
    </node>

    <group ns="yumi">
        <!-- Load joint controller configurations from YAML file to parameter server -->
        <rosparam file="$(find abb_controller)/config/controllers.yaml" command="load"/>

        <!-- spawn controller manager -->
        <node name="ros_control_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="$(arg controllers)"/>

        <!-- load stoped controller -->
        <node name="ros_control_stopped_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="--stopped $(arg stopped_controllers)"/>

        <!-- the real hardware interface /-->
        <node required="true" name="yumi_hw" pkg="abb_communication_interface" type="yumi_hw_ifce_node" respawn="false" output="screen"> <!--launch-prefix="xterm -e gdb - -args"-->
            <!-- addresses /-->
            <param name="name" value="$(arg name)" />
            <!--param name="port" value="$(arg port)"/-->
            <param name="ip" value="$(arg ip)"/>
        </node>
    </group>

    <!-- Show in Rviz   -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find abb_description)/launch/yumi.rviz"/>
</launch>
